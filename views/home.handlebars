<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Sec</title>

	<link rel="stylesheet" href="bulma.css">
</head>
<body>
	<section class="section">
		<div class="container">
			{{#if error }}
			<div class="notification is-danger">Error: {{ error }}</div>
			{{/if }}
			{{#if message }}
			<div div class="notification is-info">Message: {{ message }}</div>
			{{/if }}
			<form action="/do" method="POST">  
				<input type="hidden" name="_csrf" value="{{ csrfToken }}">

				<div class="field">
					<label class="label">
						Name
					</label>
					<p class="control">
						<input class="input" type="text" name="name" value="{{ name }}">
					</p>
				</div>

				<div class="field">
					<label class="label">
						Text
					</label>
					<p class="control">
						<textarea class="textarea" name="text">{{ text }}</textarea>
					</p>
				</div>

				<div class="field">
					<label class="label">
						Password
					</label>
					<p class="control">
						<input class="input" type="password" name="password">
					</p>
				</div>

				<div>
					<button type="submit">Submit</button>
				</div>
			</form>
		</div>
	</section>
</body>
</html>